<div class="hidden-container nested-fields shadow rounded">
  <div class="form-group hidden-field">
    <label class="head-small">Pumping Station Ref.</label>
    <%= f.text_field :station_ref, class: 'form-control' %>
  </div>
  <div class="form-group hidden-field">
    <label class="head-small">Name</label>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group hidden-field">
    <label class="head-small">Linked Overflow Ref.</label>
    <%= f.text_field :overflow_ref, class: 'form-control' %>
  </div>
  <div class="form-group hidden-field">
    <label class="head-small">Permitted Pump Rate (l/s)</label>
    <%= f.text_field :permitted_rate, class: 'form-control' %>
  </div>
  <div class="form-group hidden-field">
    <label class="head-small">Total Modelled Pump Rate (l/s)</label>
    <%= f.text_field :modelled_rate, class: 'form-control' %>
  </div>
  <div class="form-group hidden-field">
    <label class="head-small">Annual Pump Run Time (hours)</label>
    <%= f.text_field :run_time, class: 'form-control' %>
  </div>
  <div class="form-group hidden-field">
    <label class="head-small">Comments</label>
    <%= f.text_field :comments, class: 'form-control' %>
  </div>
  <div class="form-group hidden-field">
    <%= link_to_remove_association 'Delete Row', f, class: "delete-row" %>
  </div>
</div></br>

<div class= "form-container">
  <%= render 'progress' %>
  <div class="heading">
    <%= render 'steps' %> 
    <h2 class="head-large">Project Background</h2>
  </div>
  <%= form_for @report, url: report_report_wizard_path, method: :put do |f| %>
    <div class="text-container">
      <label class="head-small" style="text-align: center;">Introduction</label></br>
      <%= f.rich_text_area :background_intro, class: "form-control text-area-sm" %>
    </div></br>

    <div class="text-container">
      <label class="head-small" style="text-align: center;">Background</label></br>
      <%= f.rich_text_area :project_background, class: "form-control text-area" %>
    </div>

    <div>
      <%= f.fields_for :background_attributes, @report.background do |background_form| %>
        <div class="rows-container">
          <%= render 'background_fields', f: background_form %>
        </div>
      <% end %>
    </div>
    
    <div class="row-buttons">
      <div>
        <%= f.submit "Save Changes" , class: "btn-reserved", style: "background-color: #262626; border: none; color: #fff; float: left;"%>
      </div>
    <div>
  <% end %>

  <div class="nav-field">
    <%= render 'navigation_fields' %>
  </div>

</div>
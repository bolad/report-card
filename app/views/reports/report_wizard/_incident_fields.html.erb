<div class="hidden-container nested-fields shadow rounded">
  <div class="form-group hidden-field">
    <label class="head-small">Location</label>
    <%= f.text_field :location, class: 'form-control' %>
  </div>
  <div class="form-group hidden-field">
    <label class="head-small">Post Code</label>
    <%= f.text_field :postcode, class: 'form-control' %>
  </div>
  <div class="form-group hidden-field">
    <label class="head-small">NGR</label>
    <%= f.text_field :ngr, class: 'form-control' %>
  </div>
  <div class="form-group hidden-field">
    <label class="head-small">HFRR Property (Y/N)</label>
    <%= f.text_field :hfrr, class: 'form-control' %>
  </div>
  <div class="form-group hidden-field">
    <label class="head-small">Historical Flooding Property</label>
    <%= f.text_field :historical_flooding, class: 'form-control' %>
  </div>
  <div class="form-group hidden-field">
    <label class="head-small">WIRS/INS Incidents (Total No.)</label>
    <%= f.text_field :wirs, class: 'form-control' %>
  </div>
  <div class="form-group hidden-field">
    <label class="head-small">Nearest Model Node</label>
    <%= f.text_field :nearest_node, class: 'form-control' %>
  </div>
  <div class="form-group hidden-field">
    <label class="head-small">Modelled Risk RP</label>
    <%= f.text_field :modelled_risk, class: 'form-control' %>
  </div>
  <div class="form-group hidden-field">
    <label class="head-small">Comments</label>
    <%= f.text_field :comments, class: 'form-control' %>
  </div>
  <div class="form-group hidden-field">
    <%= link_to_remove_association 'Delete Row', f, class: "delete-row" %>
  </div>
</div></br>

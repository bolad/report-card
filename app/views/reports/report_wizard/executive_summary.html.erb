<div class= "form-container">
  <%= render 'progress' %>
  <div class="heading">
    <%= render 'steps' %>
    <h2 class="head-large">Executive Summary</h2>
  </div>

  <%= render layout: 'text_area' do |f| %>
    <div class="text-container">
      <%= f.rich_text_area :executive_summary, class: "form-control text-area" %>
    </div>
    <div>
      <%= f.fields_for :executives do |executive_form| %>
        <%= render 'executive_fields', f: executive_form %>
      <% end %>
    </div>
    </br>

    <div class="btn btn-inverse">
      <%= link_to_add_association 'Add new row to executive summary table', f, :executives, style: "background-color: #262626; border: none; color: #fff;" %>
    </div>
    
  <% end %>

  <%= render 'navigation_fields' %>

</div>
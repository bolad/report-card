<div class= "form-container">
  <%= render 'progress' %>
  <div class="heading">
    <%= render 'steps' %>
    <h2 class="head-large">Executive Summary</h2>
  </div>

  <%= form_for @report, url: report_report_wizard_path, method: :put do |f| %>
    <div class="text-container">
      <%= f.rich_text_area :executive_summary, class: "form-control text-area" %>
    </div>

    <div>
      <%= f.fields_for :executives do |executive_form| %>
        <div class="rows-container">
          <%= render 'executive_fields', f: executive_form %>
        </div>
      <% end %>
    </div>
    
    <div class="row-buttons">
      <div class="btn btn-inverse nav-right">
        <%= link_to_add_association 'Add Table Row', f, :executives, style: "background-color: #262626; border: none; color: #fff;" %>
      </div>
      <div class="btn btn-inverse nav-left">
        <%= f.submit "Save Changes" , style: "background-color: #262626; border: none; color: #fff;"%>
      </div>
    <div>
    
  <% end %>
  <div class="nav-field">
    <%= render 'navigation_fields' %>
  </div>

</div>
<p id="notice"><%= notice %></p>

<h1>Reports</h1>

<table>
  <thead>
    <tr>
      <th>Project name</th>
      <th>Project number</th>
      <th>Document title</th>
      <th>Document number</th>
      <th>Document status</th>
      <th>Date</th>
      <th>Client name</th>
      <th>Client number</th>
      <th>Project manager</th>
      <th>Checked by</th>
      <th>Approved by</th>
      <th>Revision number</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.project_name %></td>
        <td><%= report.project_number %></td>
        <td><%= report.document_title %></td>
        <td><%= report.document_number %></td>
        <td><%= report.document_status %></td>
        <td><%= report.date %></td>
        <td><%= report.client_name %></td>
        <td><%= report.client_number %></td>
        <td><%= report.project_manager %></td>
        <td><%= report.checked_by %></td>
        <td><%= report.approved_by %></td>
        <td><%= report.revision_number %></td>
        <td><%= report.description %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

